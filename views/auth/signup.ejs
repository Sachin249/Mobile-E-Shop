<%- include('../includes/start.ejs') %>

<%- include('../includes/navigation.ejs') %>

<div class="container w-50 my-3">
    <% if(errorMessage) { %>
        <div class="text-danger"><%= errorMessage %></div>
    <% } %>
    <h2 class="text-success">Sign Up</h2>
    <form action="/signup" method="POST" novalidate>
        <div class="mb-3"
            <label for="exampleInputEmail1" class="form-label">Name</label>
            <input
             class="form-control <%= validationErrors.find(e=>e.param === 'uname') ? 'invalid-input' :'' %>"
             type="text"
             value="<%= oldInput.uname %>"
             id="exampleInputEmail1"
             name="uname"
             placeholder="Your Name">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" value="<%= oldInput.uemail %>"
             class="form-control <%= validationErrors.find(e=>e.param === 'uemail') ? 'invalid-input' :'' %>" id="exampleInputEmail1" name="uemail" aria-describedby="emailHelp" placeholder="Your Email">
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Date Of Birth</label>
            <input type="date" value="<%= oldInput.udob %>"
             class="form-control <%= validationErrors.find(e=>e.param === 'udob') ? 'invalid-input' :'' %>" id="exampleInputEmail1" name="udob" aria-describedby="emailHelp" >
        </div>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input
              type="password"
              value="<%= oldInput.upassword %>"
              class="form-control <%= validationErrors.find(e=>e.param === 'upassword') ? 'invalid-input' :'' %>" 
              id="exampleInputPassword1"
              name="upassword"
              placeholder="Your Password">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Confirm Password</label>
            <input 
            type="password"
             value="<%= oldInput.uconfirmpassword %>"
             class="form-control <%= validationErrors.find(e=>e.param === 'uconfirmpassword') ? 'invalid-input' :'' %>" 
             id="exampleInputPassword1"
             name="uconfirmpassword"
             placeholder="Confirm Password">
        </div>
        <div class="d-flex justify-content-between my-3">
            <button type="submit" class="btn btn-success ">Signup</button>
            <a href="/login" class="pt-2" style="text-decoration: none;">Already have a account ? Login</a>
        </div>
        
        
    </form>
</div>

<%- include('../includes/end.ejs') %>